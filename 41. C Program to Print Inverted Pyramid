#include <stdio.h>
 int main() {
    int n, i, j, k;
    printf("Enter number of rows: ");
    if (scanf("%d", &n) != 1) return 0;
    for (i = n; i >= 1; i--) {
        for (j = 0; j < n - i; j++) putchar(' ');
        for (k = 0; k < 2 * i - 1; k++) putchar('*');
        putchar('\n');
    }
    return 0;
 }
