#include <stdio.h>
#include <string.h>

void reverse(char *s, int left, int right) {
    if (left >= right) return;   // base case

    char temp = s[left];
    s[left] = s[right];
    s[right] = temp;

    reverse(s, left + 1, right - 1);   // recursive call
}

int main() {
    char str[100] = "recursion";

    reverse(str, 0, strlen(str) - 1);

    printf("Reversed string: %s\n", str);

    return 0;
}
