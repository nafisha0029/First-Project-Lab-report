#include <stdio.h>
#include <string.h>

struct Student {
    char name[50];
    int age;
};

int main() {
    int n, i, j;
    printf("Enter number of students: ");
    scanf("%d", &n);

    struct Student s[n], temp;

    for(i = 0; i < n; i++) {
        printf("Name: ");
        scanf("%s", s[i].name);
        printf("Age : ");
        scanf("%d", &s[i].age);
    }

    for(i = 0; i < n-1; i++) {
        for(j = i+1; j < n; j++) {
            if(strcmp(s[i].name, s[j].name) > 0) {
                temp = s[i];
                s[i] = s[j];
                s[j] = temp;
            }
        }
    }

    printf("\nSorted by Name:\n");
    for(i = 0; i < n; i++)
        printf("%s â€” %d\n", s[i].name, s[i].age);

    return 0;
}
