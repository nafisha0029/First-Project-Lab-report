 #include <stdio.h>
 int main() {
    int n, i, j;
    printf("Enter number of rows: ");
    if (scanf("%d", &n) != 1) return 0;
    for (i = n; i >= 1; i--) {
        for (j = 0; j < n - i; j++) putchar(' ');
        for (j = 1; j <= 2 * i - 1; j++) {
            if (i == n || j == 1 || j == 2 * i - 1) putchar('*');
            else putchar(' ');
        }
        putchar('\n');
    }
    return 0;
 }
