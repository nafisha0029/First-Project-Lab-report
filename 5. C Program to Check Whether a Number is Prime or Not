#include <stdio.h>
#include <math.h>
#include <stdbool.h>

int main() {
    int n;
    printf("Enter a positive integer: ");
    if (scanf("%d", &n) != 1) return 0;
    if (n <= 1) { printf("%d is not prime.\n", n); return 0; }
    if (n == 2) { printf("2 is prime.\n"); return 0; }
    if (n % 2 == 0) { printf("%d is not prime.\n", n); return 0; }
    int limit = (int)sqrt(n);
    for (int i = 3; i <= limit; i += 2) {
        if (n % i == 0) { printf("%d is not prime.\n", n); return 0; }
    }
    printf("%d is prime.\n", n);
    return 0;
