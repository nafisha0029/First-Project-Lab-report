#include <stdio.h>

struct Student {
    int id;
    char name[50];
};

int main() {
    struct Student s = {1, "Sumaya"}, r;

    FILE *f = fopen("data.bin", "wb");
    fwrite(&s, sizeof(s), 1, f);
    fclose(f);

    f = fopen("data.bin", "rb");
    fread(&r, sizeof(r), 1, f);
    fclose(f);

    printf("ID: %d\nName: %s", r.id, r.name);

    return 0;
}
