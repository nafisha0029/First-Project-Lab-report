 #include <stdio.h>
 int main() {
    int n, i, j;
    printf("Enter number of rows: ");
    if (scanf("%d", &n) != 1) return 0;
    int total = n * (n + 1) / 2;
    for (i = 1; i <= n; i++) {
        for (j = 0; j < i; j++) {
            printf("%d ", total--);
        }
        putchar('\n');
    }
    return 0;
 }
