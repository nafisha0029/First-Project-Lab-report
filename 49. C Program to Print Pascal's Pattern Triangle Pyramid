 #include <stdio.h>
 int main() {
    int n, i, j;
    printf("Enter number of rows: ");
    if (scanf("%d", &n) != 1) return 0;
    for (i = 0; i < n; i++) {
        int val = 1;
        for (j = 0; j < n - i; j++) printf("  ");
        for (j = 0; j <= i; j++) {
        }
            printf("%4d", val);
            val = val * (i - j) / (j + 1);
        putchar('\n');
    }
    return 0;
 }
